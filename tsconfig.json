{
  "compilerOptions": {
    "module": "CommonJS",
    "strict": true,
    "outDir": "./build",
    "skipLibCheck": true,
    "target": "es2019",
    "lib": ["es2019"],
    "moduleResolution": "node",
    "composite": true,
    "noErrorTruncation": true,
    "noImplicitReturns": true,
    "allowJs": false,
    "rootDir": "./src",
    "inlineSourceMap": true
  },
  "include": ["src/**/*"]
}
